<UserControl x:Class="NoiseCancellationTestApp.SpectrumVisualizer"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:NoiseCancellationTestApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
			 mc:Ignorable="d" 
			 x:ClassModifier="internal"
			 d:DataContext="{d:DesignInstance local:SpectrumVisualizerVm}">
	<Canvas Background="Black" Width="600" Height="225">
		<Polyline Stroke="Green" Points="{Binding PolylinePoints}" StrokeThickness="1"/>
	</Canvas>
</UserControl>